@page
@model NET_PS_5.Pages.CreateModel
@{
    ViewData["Title"] = "Nowy produkt";
}
<h2>Nowy produkt</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="newProduct.name" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="newProduct.name" class="form-control">
                <span asp-validation-for="newProduct.name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="newProduct.price" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="newProduct.price" maxlength="6" class="form-control">
                <span asp-validation-for="newProduct.price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="newProduct.categoryId" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <select asp-for="newProduct.categoryId" class="form-control">
                    <option value="">Wybierz kategorie</option>
                    @foreach (var p in Model.categoryList)
                    {
                        <option value="@p.id">@Html.DisplayFor(m => p.shortName)</option>                        
                    }
                </select>
                <span asp-validation-for="newProduct.categoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>

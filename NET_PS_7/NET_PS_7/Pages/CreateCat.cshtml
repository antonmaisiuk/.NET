@page
@model NET_PS_5.Pages.CreateCatModel
@{
    ViewData["Title"] = "Nowy produkt";
}
<h2>Nowa kategoria</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="newCat.shortName" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="newCat.shortName" class="form-control">
                <span asp-validation-for="newCat.shortName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="newCat.longName" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="newCat.longName" class="form-control">
                <span asp-validation-for="newCat.longName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>


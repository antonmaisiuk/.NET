            </th>
            <th scope="col">
                @*<p>Nazwa</p>*@
                @Html.DisplayNameFor(model => Model.categoryList[0].shortName)
            </th>
            <th scope="col">
                @*<p>Cena</p>*@
                @Html.DisplayNameFor(model => Model.categoryList[0].longName)
            </th>
            <th scope="col">
                Akcja
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.categoryList)

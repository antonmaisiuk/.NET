@page
@model NET_PS_9.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Edycja produktu</h1>
<div class="container">
    <form class="form-horizontal" method="post">
        @Html.Hidden("product.id", Model.product.id)
        <div class="form-group">
            <label asp-for="product.name" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="product.name" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <label asp-for="product.price" class="control-label col-sm-2"></label>
            <div class="col-sm-6">
                <input asp-for="product.price" class="form-control">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>

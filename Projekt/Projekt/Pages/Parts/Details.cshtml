@page
@model Projekt.Pages.Parts.DetailsModel

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Szczegóły</h1>

<div class="details-div d-flex">
    <div class="details-img">
        <img src="@Model.Part.imgUrl}" alt="Photo @Model.Part.partName" width="100%" />
    </div>
    <div class="details-content">
        <h4>@Html.DisplayFor(model => model.Part.partName)</h4>
        <hr />
        <dl class="row">            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Part.descript)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Part.descript)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Part.price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Part.price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Part.imgUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Part.imgUrl)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Part.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Part.Category.brandName)
            </dd>
        </dl>
    </div>
</div>
<div>
    
    <a class="btn btn-danger" asp-page="./Index">Back to List</a>
</div>
